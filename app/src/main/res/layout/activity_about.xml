<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:src="@mipmap/author_image_round"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView"
        android:layout_marginTop="52dp"
        android:text="Hello my name is Filip Krása.\nThis is my first Android app.\nI hope you like it. ☕"
    />

    <LinearLayout
        android:id="@+id/bugReport"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:layout_above="@id/website"
        android:layout_margin="8dp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_bug_report_24"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Report a bug"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/website"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:layout_above="@id/support"
        android:layout_margin="8dp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_web_24"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="My website"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/support"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_monetization_on_24"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Support me"
            />
    </LinearLayout>

    <Button
        android:id="@+id/closeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:textStyle="bold"
        android:textSize="24sp"
    />

</RelativeLayout>